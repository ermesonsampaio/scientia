// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quiz {
  id          String                @id @default(uuid())
  title       String
  time        Int
  description String
  questions   Question[]
  references  ReferencesOnQuizzes[]
  categoryId  String?               @map("category_id")
  category    Category?             @relation(fields: [categoryId], references: [id])

  @@map("quizzes")
}

model Question {
  id      String   @id @default(uuid())
  quiz    Quiz     @relation(fields: [quizId], references: [id])
  quizId  String   @map("quiz_id")
  content String
  options Option[]

  @@map("questions")
}

model Option {
  id         String   @id @default(uuid())
  content    String
  isCorrect  Boolean  @map("is_correct")
  question   Question @relation(fields: [questionId], references: [id])
  questionId String   @map("question_id")

  @@map("options")
}

model Category {
  id      String @id @default(uuid())
  label   String @unique
  quizzes Quiz[]

  @@map("categories")
}

model Reference {
  id      String                @id @default(uuid())
  label   String
  url     String
  quizzes ReferencesOnQuizzes[]
}

model ReferencesOnQuizzes {
  quiz        Quiz      @relation(fields: [quizId], references: [id])
  quizId      String
  reference   Reference @relation(fields: [referenceId], references: [id])
  referenceId String
  assignedAt  DateTime  @default(now())
  assignedBy  String


  @@id([quizId, referenceId])
  @@map("references_quizzes")
}
